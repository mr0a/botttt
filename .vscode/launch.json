{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch via Bun",
      "request": "launch",
      "cwd": "${workspaceFolder}/backend",
      "runtimeArgs": [
        "run", // or "start", "dev", etc. depending on your script
