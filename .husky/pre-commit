#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Check branch naming convention
branch_name=$(git rev-parse --abbrev-ref HEAD)
valid_pattern="^(feature|bugfix|hotfix|release)\/[a-z0-9-]+$|^(main|develop)$"

if [[ ! $branch_name =~ $valid_pattern ]]; then
  echo "âŒ Branch name '$branch_name' does not follow naming convention!"
  echo "Valid patterns:"
  echo "  - feature/description-here"
  echo "  - bugfix/description-here" 
  echo "  - hotfix/description-here"
  echo "  - release/version-number"
  echo "  - main"
  echo "  - develop"
  exit 1
fi

# # Run linting
# echo "ğŸ§¹ Running ESLint..."
# bun run lint
# if [ $? -ne 0 ]; then
#   echo "âŒ Linting failed. Please fix the issues before committing."
#   exit 1
# fi

# # Run type checking
# echo "ğŸ” Running TypeScript type checking..."
# bun run type-check
# if [ $? -ne 0 ]; then
#   echo "âŒ Type checking failed. Please fix the issues before committing."
#   exit 1
# fi

# # Run tests
# echo "ğŸ§ª Running tests..."
# bun run test
# if [ $? -ne 0 ]; then
#   echo "âŒ Tests failed. Please fix the issues before committing."
#   exit 1
# fi

echo "âœ… All pre-commit checks passed!"